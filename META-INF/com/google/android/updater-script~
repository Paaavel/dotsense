## CHECKING Configuration from aroma-config
#
# Check it using if else statement, with file_getprop
# in /tmp/aroma
#
# Example:
# if
#      file_getprop("/tmp/aroma/customize.prop","item.6.3") == "1"
# then
#   ... here the command ...
# endif;
#

## INFO COMMAND FOR AROMA
#
#-- DIFFERENT BEHAVIOUR
#
# set_progress(0.5);
#    Set Progress position: 0.0 = 0%; 0.5 = 50%; 1.0 = 100%
#    
# show_progress(0.2, 400);
#    show_progress( progress size, number of files to be extracted );
#    if we had 50 files, and want to "add" 0.2 into progress after all finished
#    use (0.2, 50)
#
# show_progress(0.2, "-2000");
#    show_progress( progress size, wait for 2000ms );
#    For show progress with time as progress indicator, use negative value. After 2second progress will add 0.2/20% into the value
#    use (0.2, "-2000"). Note, use quote for value "-2000"
#
# ui_print("@ Title");
#    Set progress title
#
# ui_print("Default Text");
#    Set Normal Log Text
#
##

#####################################################################################################
#
# .sense installation script using aroma with "devpackage"
#
# made using some simple code from ONeill123 and the default AROMA sample
# some bugs fixed by jmztaylor and skippycentral.
#
ui_print("@.sense 2.0");
ui_print("@build date: 21/03/12");
ui_print("@benjamingwynn");
set_progress(0.0);
ui_print(" ");
ui_print("Installing...");
mount("MTD", "system", "/system");
#-- If you have started it in PIM (themes) then..
if
  file_getprop("/tmp/aroma/pim.prop","selected") == "1"
then
    if
      file_getprop("/tmp/aroma/mods.prop","selected.1") == "1"
    then
      ui_print("Installing Glass theme...");
      package_extract_dir("packages-onlyone/Theme/Glass", "/system");
    endif;

    if
      file_getprop("/tmp/aroma/mods.prop","selected.1") == "2"
    then
      ui_print("Installing stock theme...");
      package_extract_dir("packages-onlyone/Theme/Stock", "/system");
    endif;

    if
      file_getprop("/tmp/aroma/mods.prop","selected.1") == "3"
    then
      ui_print("Installing CM7 theme...");
      package_extract_dir("packages-onlyone/Theme/CM7", "/system");
    endif;
else
#-- lets shove the rest of the script into an else command, not a very good idea but I don't think there is any other way to end it!
#-- Now lets format and mount some drives
ui_print("Formatting system...");
format("MTD", "system");
#-- Give a pointless message
ui_print("preparing core");
#-- Extract the file to a tempory folder
package_extract_file("scripts/check_data_app", "/tmp/check_data_app");
#-- Set a permission on this folder so it may execute
set_perm(0, 0, 0777, "/tmp/check_data_app");
#-- Starts the now executable program..
run_program("/tmp/check_data_app");
#-- Now that thats done we are going to mount some other partitions
ui_print("mounting...");
mount("MTD", "userdata", "/data");
#
# "DEVPACKAGE" SCRIPTING ENGINE
#

# Main system files.

# First extract the APK's and stuff. If you have a GSM Wildfire S then that is all you need so far

ui_print("Installing main core");
package_extract_dir("system", "/system");
ui_print("Done installing core");

# Okay, now if you have a different device then extract the support for it to run correctly...

    if
      file_getprop("/tmp/aroma/device.prop","selected") == "2"
    then
      ui_print("Installing packages for the CDMA WFS");
      package_extract_dir("devicesupport/marvelc/system", "/system");
    endif;

    if
      file_getprop("/tmp/aroma/device.prop","selected") == "3"
