set_perm(0, 0, 0644, "/system/bin/apps2sd.hlp");
set_perm(0, 0, 0777, "/system/xbin/a2sd");
set_perm(0, 0, 0777, "/system/bin/dtinstall");
set_perm(0, 0, 06755, "/system/bin/su");
#-- Lets move the progress bar...
#-- Lets make another symbolic link
symlink("/system/bin/su", "/system/xbin/su");
#-- More permission stuff!
set_perm_recursive(0, 0, 0755, 0555, "/system/etc/ppp");
set_perm_recursive(0, 2000, 0755, 0755, "/system/xbin");
#-- Yay! Permission setting is done on the system partition for now...
#-- Display to the user that we are about to install busybox for them.
ui_print("Installing busybox");
#-- Set a certain permission on busybox
set_perm(0, 1000, 0755, "/system/xbin/busybox");
#-- Symoblicly link two files.
symlink("/system/xbin/busybox", "/system/bin/busybox");
#-- Extract the busybox file to the temory directory.
package_extract_file("scripts/installbusybox", "/tmp/installbusybox");
#-- Set executable permissions on the file
set_perm(0, 0, 0777, "/tmp/installbusybox");
#-- Run the program
run_program("/tmp/installbusybox");
#-- Now that the program is finished we can move the progress bar
set_progress(1.00);
# Now copy that dotsense file!
package_extract_file("extractinfo", "/system");

#-- Finish
ui_print(" ");
ui_print("@ Finished");
ui_print("Everything finished correctly.");
